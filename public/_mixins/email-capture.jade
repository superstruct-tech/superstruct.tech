- formIds = {techEventRecruiting: '388680503'}

mixin emailCapture(formName, headline, cta)
  - formId = formIds[formName]
  - url = `https://www.getdrip.com/forms/${formId}/submissions`
  form(action=url, method='post', data-drip-embedded-form=formId)
    h3(data-drip-attribute='headline')= headline
    div
      label Your Best Email Address
        input(type='email', name='fields[email]', value='')
    div(style='display: none;', aria-hidden='true')
      label(for='website') Website
      br
      input#website(type='text', name='website', tabindex='-1', autocomplete='false', value='')
    div
      input(type='submit', value=cta, data-drip-attribute='sign-up-button')
    div(data-drip-attribute='description')
      block
